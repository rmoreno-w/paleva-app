<h2>Nova Porção</h2>

<% if request.path.include?('dishes') %>
    <%= form_with(model:[@restaurant, @dish, @serving], class: 'form') do |f|  %>
        <div class="input_container">
            <%= f.label :description, class: 'input_label' %>
            <%= f.text_field :description, class: 'input' %>
        </div>
        <div class="input_container">
            <%= f.label :current_price, class: 'input_label' %>
            <%= f.number_field :current_price, min: 0, step: 0.01, class: 'input' %>
        </div>

        <%= f.submit class: 'form_button' %>
    <% end %>
<% else %>
    <%= form_with(model:[@restaurant, @beverage, @serving], class: 'form') do |f|  %>
        <div class="input_container">
            <%= f.label :description, class: 'input_label' %>
            <%= f.text_field :description, class: 'input' %>
        </div>
        <div class="input_container">
            <%= f.label :current_price, class: 'input_label' %>
            <%= f.number_field :current_price, min: 0, step: 0.01, class: 'input' %>
        </div>

        <%= f.submit class: 'form_button' %>
    <% end %>
<% end %>