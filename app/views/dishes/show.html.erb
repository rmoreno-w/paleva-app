<h2><%= @dish.name%></h2>

<section>
    <ul>
        <li>
            <p>
                <span><%= Dish.human_attribute_name :description %></span><%= @dish.description%>
            </p>
        </li>
        <li>
            <p>
                <span><%= Dish.human_attribute_name :calories %></span><%= @dish.calories%>
            </p>
        </li>
        <li>
            <span>Foto do Prato</span>
            <% if @dish.picture.present? %>
                <div class="w-60 h-60">
                    <%= image_tag @dish.picture %>
                </div>
            <% else %>
                <p>Este Prato ainda n√£o possui uma foto :(</p>
            <% end %>
        </li>
    </ul>
</section>

<%= link_to 'Alterar Prato', edit_restaurant_dish_path(@restaurant.id, @dish.id) %>
<%= button_to 'Remover Prato', restaurant_dish_path(@restaurant.id, @dish.id), method: :delete %>