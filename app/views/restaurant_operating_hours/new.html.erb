<h2>Hor√°rios de Funcionamento</h2>

<%= form_with model:[@restaurant, @restaurant_operating_hour]  do | f |  %>
    <%= f.label :start_time %>
    <%= f.time_field :start_time %>

    <%= f.label :end_time %>
    <%= f.time_field :end_time %>

    <%= f.label :status %>
    <%= f.collection_select :status, RestaurantOperatingHour.statuses.each_pair.map { |key, value| [I18n.t("#{key}"), value] }, :second, :first %>

    <%= f.label :weekday %>
    <%= f.collection_select :weekday, RestaurantOperatingHour.weekdays.each_pair.map { |key, value| [I18n.t("#{key}"), value] }, :second, :first %>

    <%= f.submit %>
<% end %>


