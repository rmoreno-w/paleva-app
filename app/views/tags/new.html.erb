<h2>Cadastrar Tag</h2>

<%= form_with(model: [@restaurant, @tag], class: 'form') do |f| %>
    <div class="input_container">
        <%= f.label :name, class: 'input_label' %>
        <%= f.text_field :name, auto_focus: true, class: 'input' %>
    </div>

    <%= f.submit class: 'form_button'%>
<% end %>